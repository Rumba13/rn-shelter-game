{
  "expo": {
    "name": "Shelter",
    "slug": "rn-shelter-game",
    "entryPoint": "src/app/index",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.jpg",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/cook.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.senderium.shelter"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ff0000"
      },
      "package": "com.senderium.shelter",
      "permissions": [
        "android.permission"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.jpg"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/SpaceMono-Regular.ttf",
            "./assets/fonts/RobotoSlab-Bold.ttf",
            "./assets/fonts/RobotoSlab-SemiBold.ttf"
          ]
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": false
        }
      ],
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8a41940a-ce51-4db0-840d-3d1a62cbad86"
      }
    }
  }
}
